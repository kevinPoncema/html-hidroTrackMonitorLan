<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note App</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        @media (min-width: 992px) {
            /* Alinear elementos de búsqueda en el centro en pantallas grandes */
            .search-form {
                margin: auto;
            }
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#crearNotaModal">Crear Nota</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Crear Lista</a>
            </li>
        </ul>
        <!-- Formulario de búsqueda -->
        <form class="form-inline my-2 my-lg-0 search-form" action="/buscarXNombre" method="post">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar por nombre" aria-label="Search" name="parametro">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
        </form>
    </div>
</nav>

<div class="container mt-4">
    <div class="row">
        <% if (rows && rows.length > 0) { %>
            <% rows.forEach(function(row) { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <!-- Título de la nota -->
                            <h5 class="card-title font-lg mb-0 note-title" data-id="<%= row.id_nota %>"><%= row.titulo_nota %></h5>
                            <!-- Botón de eliminar -->
                            <form action="/deleteNote/<%= row.id_nota %>" method="get">
                                <button class="btn btn-danger delete-btn" type="submit">Eliminar</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-md-12">
                <p>No hay notas disponibles</p>
            </div>
        <% } %>
    </div>
    <hr>
    <div class="row">
        <% if (listas && listas.length > 0) { %>
            <% listas.forEach(function(lista) { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <!-- Título de la lista -->
                            <h5 class="card-title font-lg mb-0 note-title" data-id="<%= lista.id_list %>"><%= lista.titulo_list %></h5>
                            <!-- Botón de eliminar -->
                            <form action="/deleteList/<%= lista.id_list %>" method="get">
                                <button class="btn btn-danger delete-btn" type="submit">Eliminar</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-md-12">
                <p>No hay listas disponibles</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal para crear una nueva nota -->
<div class="modal fade" id="crearNotaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Crear Nota</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/createNote" method="post">
                    <div class="form-group">
                        <label for="tituloNota">Título de la Nota</label>
                        <input type="text" class="form-control" id="titulo" name="titulo">
                        <br>
                        <label for="tagsoNota">Tags separda por coma(js,html,php)</label>
                        <input type="text" class="form-control" id="tagsoNota" name="tags" values="">
                    </div>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // Script para redirigir al hacer clic en el título de la nota
    document.querySelectorAll('.note-title').forEach(item => {
        item.addEventListener('click', event => {
            const noteId = item.getAttribute('data-id');
            window.location.href = "/getNote/" + noteId;
        });
    });
</script>
</body>
</html>
